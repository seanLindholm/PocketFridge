<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PocketFridge.Views.ItemDetailPage"
             Title="Pocket Fridge"
             NavigationPage.HasBackButton="False"
             BackgroundColor="Black">

    <NavigationPage.TitleView>
        <Label HorizontalOptions="Center">
            <Label.FormattedText>
                <FormattedString>
                    <Span Text="Pocket Fridge "
                          FontSize="16"
                          TextColor="LightGray" />
                    <Span Text="saving the world one item at a time"
                          FontSize="12"
                          FontAttributes="Italic"
                          TextColor="LightGray" />
                </FormattedString>
            </Label.FormattedText>
        </Label>
    </NavigationPage.TitleView>

    <ContentPage.Content>
        <StackLayout>
            <!-- This defines the header just below the banner, cotains the  -->
            <Grid BackgroundColor="LightGray">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                </Grid.RowDefinitions>
                <Label Grid.Column="0"
                       Text="{Binding foodName}"
                       FontSize="20"
                       TextColor="Black"
                       HorizontalOptions="CenterAndExpand"
                       VerticalOptions="CenterAndExpand"
                       FontAttributes="Bold" />
                <Image Grid.Column="0"
                       Source="deletebin"
                       HorizontalOptions="EndAndExpand"
                       VerticalOptions="CenterAndExpand">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnDeleteTapped"
                                              NumberOfTapsRequired="1" />
                    </Image.GestureRecognizers>
                </Image>
            </Grid>

            <CollectionView Grid.Row="1"
                            Grid.ColumnSpan="3"
                            x:Name="collectionView"
                            ItemsSource="{Binding foodDetail}"
                            SelectionMode="None">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical"
                                     Span="1"
                                     VerticalItemSpacing="10"
                                     HorizontalItemSpacing="10" />
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <SwipeView>
                            <SwipeView.LeftItems>
                                <SwipeItems Mode="Reveal">
                                    <SwipeItem Text="Delete"
                                               IconImageSource="deletebin"
                                               BackgroundColor="Red"
                                               Command="{Binding Source={x:Reference collectionView}, Path=BindingContext.DeleteItemCommand}"
                                               CommandParameter="{Binding .}" />
                                </SwipeItems>
                            </SwipeView.LeftItems>
                            <SwipeView.RightItems>
                                <SwipeItem Text="Edit"
                                           IconImageSource="edit"
                                           BackgroundColor="Orange" />
                                <SwipeItem Text="Consumed"
                                           BackgroundColor="Green" />
                            </SwipeView.RightItems>
                            <Grid BackgroundColor="GhostWhite"
                                  Margin="5,0,5,0">

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="25" />
                                    <RowDefinition Height="25" />
                                    <RowDefinition Height="25" />

                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />

                                </Grid.ColumnDefinitions>
                                <!--Boarder around each item-->
                                <!--Horizontal lines-->
                                <!--<BoxView 
                                         Grid.Row="0"
                                         Grid.Column="0"
                                         Grid.ColumnSpan="2"
                                         BackgroundColor="{StaticResource BoardColor}"
                                         HeightRequest="2"
                                         VerticalOptions="Start"
                                         HorizontalOptions="FillAndExpand" />
                                
                                <BoxView 
                                         Grid.Row="2"
                                         Grid.Column="0"
                                         Grid.ColumnSpan="2"
                                         BackgroundColor="{StaticResource BoardColor}"
                                         HeightRequest="2"
                                         VerticalOptions="End"
                                         HorizontalOptions="FillAndExpand" />
                                
                                --><!--Vertical lines--><!--
                                <BoxView 
                                         Grid.Row="0"
                                         Grid.Column="0"
                                         Grid.RowSpan="3"
                                         BackgroundColor="{StaticResource BoardColor}"
                                         WidthRequest="2"
                                         VerticalOptions="FillAndExpand"
                                         HorizontalOptions="Start" />
                                
                                <BoxView 
                                         Grid.Row="0"
                                         Grid.Column="1"
                                         Grid.RowSpan="3"
                                         BackgroundColor="{StaticResource BoardColor}"
                                         WidthRequest="2"
                                         VerticalOptions="FillAndExpand"
                                         HorizontalOptions="End" />-->


                                <!--Expiriy date-->
                                <Label Padding="10,0,0,0"
                                       Text="Expiriy"
                                       VerticalOptions="Center"
                                       FontSize="14"
                                       TextColor="Black" />
                                <Label Grid.Column="1"
                                       Text="{Binding expiriyString}"
                                       VerticalOptions="Center"
                                       FontSize="14"
                                       TextColor="Black"/>
                                
                                <!--Fridge name-->
                                <Label Grid.Row="1"
                                       Padding="10,0,0,0"
                                       Text="Fridge"
                                       VerticalOptions="Center"
                                       FontSize="14"
                                       TextColor="Black" />
                                
                                <Label Grid.Row="1" Grid.Column="1"
                                       Text="{Binding fridgeName}"
                                       VerticalOptions="Center"
                                       FontSize="14"
                                       TextColor="Black" />
                                
                                <!--Item opened-->
                                <Label Grid.Row="2"
                                       Padding="10,0,0,0"
                                       Text="Is item open"
                                       VerticalOptions="Center"
                                       FontSize="14"
                                       TextColor="Black" />
                                
                                <Label Grid.Row="2"
                                       Grid.Column="1"
                                       VerticalOptions="Center"
                                       FontSize="14">
                                    <Label.Triggers>
                                        <DataTrigger TargetType="Label"
                                                     Binding="{Binding opened}"
                                                     Value="false">
                                            <Setter Property="Text"
                                                    Value="No" />
                                            <Setter Property="TextColor"
                                                    Value="Green" />
                                        </DataTrigger>
                                        <DataTrigger TargetType="Label"
                                                     Binding="{Binding opened}"
                                                     Value="true">
                                            <Setter Property="Text"
                                                    Value="Yes" />
                                            <Setter Property="TextColor"
                                                    Value="Red" />

                                        </DataTrigger>
                                    </Label.Triggers>
                                </Label>
                            </Grid>
                        </SwipeView>
                    </DataTemplate>

                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>